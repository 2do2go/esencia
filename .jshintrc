{
    // environment
    "browser": true,
    // options
    "newcap": false,
    "supernew": false,
    "maxlen": 80,
    "smarttabs": true,
    "indent": 1,
    "globalstrict": true,
    "strict": true,
    // use es3 to get 'extra comma' at object literal error
    "es3": true,
    // suppress warnings about switches with just one case
    "onecase": true,
    "nonew": false,
    "trailing": true,
    "sub": false,
    "loopfunc": true,
    "boss": false,
    "lastsemic": false,
    "quotmark": "single",
    "undef": true,
    "unused": true,
    "immed": true,
    "globals": {
        "define": false,
        "require": false,
        "describe": false,
        "it": false,
        "mocha": false,
        "mochaPhantomJS": false
    }
}